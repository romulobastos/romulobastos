						div: input(type="text" name="nome" required)
					
					label
						p E-mail
						div: input(type="email" name="email" required)
					
					label
						p Telefone
						div: input(type="text" name="telefone" required)
				
				.flex.gap-5.flex-wrap.items-end
					label.x2
						p Mensagem
						div: textarea.flex.mb-0(name="mensagem" maxlength="300" required)
					
					label
						div
							div(data-netlify-recaptcha="true")
							button.btn.btn-primary.bold.mt-5(type="submit")
								i.mr-4.fa.fa-paper-plane-o
